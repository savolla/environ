# logseq config
ln -s ~/.xkarna/.logseq /home/savolla/
 
# install doom emacs
git clone --depth 1 https://github.com/doomemacs/doomemacs ~/.config/emacs
~/.config/emacs/bin/doom install
~/.config/emacs/bin/doom sync
 
# install custom suckless utils
cd /home/savolla/project/suckless/dmenu-5.3
sudo make install
make clean # claning necessary because it builds with musl and nixos cannor run this binary

cd /home/savolla/project/suckless/dwm-6.5/ 
sudo make install
make clean

cd /home/savolla/project/suckless/st-0.9.2/ 
sudo make install
make clean

cd /home/savolla/project/suckless/slstatus/ 
sudo make install
make clean

ln -s ./dotfiles/picom.conf ~/.config/

# start services
sudo ln -s /etc/sv/dbus /var/service

# put appimages to /bin directory
sudo ln -s ~/resource/tools/appimages/Logseq-linux-x64-0.10.9.AppImage /bin/logseq
sudo ln -s ~/resource/tools/appimages/VSCodium-1.97.2.25045.glibc2.25-x86_64.AppImage /bin/codium














